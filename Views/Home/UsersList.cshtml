@model IEnumerable<ProjectBoard.Models.ApplicationUser>

@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2><strong class="text-navy"> UsersList </strong></h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">

            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => user.UserName)</td>

                                @using (Html.BeginForm())
                                {
                                    <td>
                                        @Html.AntiForgeryToken()
                                        <a class="btn btn-xs btn-white"
                                           href="~/Home/RemoveUser/@user.Id"
                                           onclick="return confirm('Are u sure delete this user？')">
                                            <i class="fa fa-bank"></i> Delete
                                        </a>

                                        @Html.ActionLink("Add Salary", "SalaryToUser", "Home", new { userId = user.Id, userName = user.UserName }, new { style = "color:black;" })
                                    </td>
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-sm-8">
                <div class="title-action">
                    <a class="btn btn-primary btn-sm" href="/Home/ShowAllRoles">return page</a>
                </div>
            </div>

        </div>
    </div>
</div>
