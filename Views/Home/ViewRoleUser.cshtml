@model IEnumerable<ProjectBoard.Models.ApplicationUser>
@{
    ViewBag.Title = "ViewRoleUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2><strong class="text-navy"> @ViewBag.RoleName Member</strong> </h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">

            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => user.UserName)</td>

                                <td>
                                    <a class="btn btn-warning" href="~/Home/RemoveRoleUser?userId=@user.Id&&roleName=@ViewBag.RoleName" onclick="return confirm('Are you sure？')">
                                        <i class="fa fa-child"></i>Remove from role
                                    </a>
                                    @*@Html.ActionLink("RemoveRoleUser", "RemoveRoleUser", new { roleName = ViewBag.RoleName, userId = user.Id }, new { @class = "btn btn-warning" })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="col-sm-8">
                    <div class="title-action">
                        <a class="btn btn-primary btn-sm" href="/Home/ShowAllRoles">return role list</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>