@model IEnumerable<ProjectBoard.Models.ApplicationUser>

@{
    ViewBag.Title = "UserToRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2><strong class="text-navy"> @ViewBag.RoleName </strong></h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => user.UserName)</td>

                                <td>
                                    <a class="btn btn-primary"
                                       href="~/Home/AddToRole?userId = @user.Id && roleId=@ViewBag.RoleId && roleName = @ViewBag.RoleName"
                                       onclick="return confirm('Are you sure？')">
                                        <i class="fa fa-child"></i> Add Role
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm-8">
                <div class="title-action">
                    <a class="btn btn-primary btn-sm" href="/Home/ShowAllRoles">return page</a>
                </div>
            </div>
        </div>
    </div>
</div>
