@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2><strong class="text-navy"> RolesList </strong></h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th> </th>
                            <th> </th>
                            <th> </th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => role.Name)</td>

                                @using (Html.BeginForm())
                                {

                                    <td>
                                        <button class="btn btn-warning btn-sm">

                                            @Html.AntiForgeryToken()
                                            @Html.ActionLink("remove", "DeleteRoles", "Home", new { roleId = role.Id }, new { style = "color:white;text-decoration:none" })
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-sm">
                                            @Html.ActionLink("add user", "UserToRole", "Home", new { roleId = role.Id }, new { style = "color:white;text-decoration:none" })
                                        </button>

                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-sm">
                                            @Html.ActionLink("Detail", "ViewRoleUser", "Home", new { roleId = role.Id }, new { style = "color:white;text-decoration:none" })
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm-8">
                <div class="title-action">
                    <a class="btn btn-primary btn-sm" href="/Home/UsersList">Users List</a>
                    <a class="btn btn-primary btn-sm" href="/Home/CreateRole">Create Role</a>

                </div>
            </div>
        </div>
    </div>
</div>
