@model IEnumerable<ProjectBoard.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>
    <text style=" border:inset;">
        Projects
    </text>
</h2>

<p>
    <button>
        @Html.ActionLink("Create New", "Create")
    </button>
</p>
<div style=" border:inset;
        border-color: ivory;
        ">
    <table class="table">
        <tr style=" border:inset;
            border-color: ivory;
        ">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr style="font-weight:bold;
            border:inset;
            border-color: ivory;
        ">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.Label(item.StartDate.ToShortDateString())
                </td>
                <td>
                    @Html.Label(item.Deadline.ToShortDateString())
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>

                <td>
                    <button>
                        @Html.ActionLink("Tasks: " + item.Tasks.Count(),
                            "Index", "Tasks", null, new { id = item.Id })
                    </button> |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>