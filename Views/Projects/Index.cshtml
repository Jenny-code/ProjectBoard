@model IEnumerable<ProjectBoard.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>
    <text style=" border:inset;">
        Projects
    </text>
</h2>

<p>
    <button>
        @Html.ActionLink("Create New", "Create")
    </button>
</p>
<div style=" border:inset;
        border-color: ivory;
        ">
    <table class="table">
        <tr style=" border:inset;
            border-color: ivory;
        ">
            <th>
                Project Name
            </th>
            <th>
                Start
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                Completed
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr style="font-weight:bold;
            border:inset;
            border-color: ivory;
        ">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.Label(item.StartDate.ToShortDateString())
                </td>
                <td>
                    @Html.Label(item.Deadline.ToShortDateString())
                </td>
                <td>
                    $ @item.Budget.ToString("#.##")
                </td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>

                <td>
                    <button>
                        @Html.ActionLink("Tasks: " + item.Tasks.Count(),
                            "ViewTasksOfAProject", new { id = item.Id })
                    </button> |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>